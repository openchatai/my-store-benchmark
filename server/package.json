{
  "name": "backend-server",
  "private": true,
  "scripts": {
    "prepare": "pnpm nitropack prepare",
    "dev": "pnpm nitropack dev",
    "build": "pnpm nitropack build",
    "preview": "node .output/server/index.mjs",
    "start": "node .output/server/index.mjs",
    "db:gen": "pnpm prisma generate",
    "db:migrate": "pnpm prisma migrate dev --name init",
    "postinstall": "pnpm prepare && pnpm db:migrate && pnpm db:gen"
  },
  "dependencies": {
    "@prisma/client": "5.8.0",
    "nitropack": "^2.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "prisma": "^5.8.0"
  }
}
